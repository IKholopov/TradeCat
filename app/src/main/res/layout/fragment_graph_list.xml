<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/bottomShiftHeight"
              android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/coin_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/count_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_below="@+id/coin_first"/>

            <ImageView
                android:id="@+id/arrow_up"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/count_textview"
                android:layout_centerHorizontal="true"
                android:background="@drawable/transparent_selector"
                android:src="@drawable/ic_arrow_up"/>
            <ImageView
                android:id="@+id/arrow_down"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/arrow_up"
                android:background="@drawable/transparent_selector"
                android:src="@drawable/ic_arrow_down"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/coin_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"/>


            <TextView
                android:id="@+id/count2_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_below="@+id/coin_second"/>

            <ImageView
                android:id="@+id/arrow_up2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/count2_textview"
                android:background="@drawable/transparent_selector"
                android:src="@drawable/ic_arrow_up"/>

            <ImageView
                android:id="@+id/arrow_down2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/arrow_up2"
                android:background="@drawable/transparent_selector"
                android:src="@drawable/ic_arrow_down"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/coin_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/count3_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_below="@+id/coin_third"/>

            <ImageView
                android:id="@+id/arrow_up3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/count3_textview"
                android:layout_centerHorizontal="true"
                android:background="@drawable/transparent_selector"
                android:src="@drawable/ic_arrow_up"/>

            <ImageView
                android:id="@+id/arrow_down3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/arrow_up3"
                android:layout_centerHorizontal="true"
                android:background="@drawable/transparent_selector"
                android:src="@drawable/ic_arrow_down"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
